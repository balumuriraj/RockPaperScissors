<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="30dp"
    android:orientation="vertical" 
    tools:context="com.hidroids.rockpaperscissors.ResultActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="YOU"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="vs"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="COM"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/userview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#95a5a6"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:padding="15sp"
            android:text="ROCK"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/comview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#7f8c8d"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:padding="15sp"
            android:text="SCISSORS"
            android:textSize="15sp" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="0dp">
        
        <TextView
            android:id="@+id/resultview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#bdc3c7"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:padding="15sp"
            android:text="You Win!"
            android:textSize="25sp"
            android:textStyle="bold" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="25dp">
        
        <TextView
            android:id="@+id/statsview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your Stats:"
            android:textSize="15sp"
            android:textStyle="bold" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/wonView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="#2c3e50"
            android:gravity="center_horizontal"
            android:text="WIN"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/drawView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="#2c3e50"
            android:gravity="center_horizontal"
            android:text="DRAW"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/lossView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="#2c3e50"
            android:gravity="center_horizontal"
            android:text="LOSS"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="15sp" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/wonCount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="#34495e"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:text="0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/drawCount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="#34495e"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:text="0"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/lossCount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="#34495e"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:text="0"
            android:textSize="15sp" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="20dp">
        
        <Button 
        android:id="@+id/playAgainId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:text="Play Again"
        android:padding="15sp"
        android:textColor="#fff"
        android:background="#e74c3c" />
        
    </LinearLayout>
	
	

</LinearLayout>